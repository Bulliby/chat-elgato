{% extends "base.html.twig" %}
{% block body %}
    <h1>Chat El-Gato</h1>
    <input type="text" name="msg" id="msg"></input>
    <input type="submit" name="envoyer" id="envoyer"></input>
{% endblock %}

{% block chatclient %}
    {% if app.user %}
        <script>
            sessionStorage.setItem('email', '{{ app.user.email }}');
            sessionStorage.setItem('token', '{{ app.user.token }}');
        </script>
        <script src="/js/chat.js"></script>
    {% endif %}
{% endblock %}
